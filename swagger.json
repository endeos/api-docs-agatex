{
    "openapi": "3.0.2",
    "info": {
        "title": "Agatex Odoo API",
        "description": "Puntos de acceso REST personalizados para Odoo de Agatex",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://odoo-test.agatex.es/"
