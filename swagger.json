                "responses": {
                    "200": {
                        "description": "Pedido creada",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {"type": "string"},
                                        "errors": {"type": "array", "items": {"type": "string"}}
                                    }
